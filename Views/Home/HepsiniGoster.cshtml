<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f3f4f6;
            margin: 0;
            padding: 20px;
            color: #343a40;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        h1 {
            color: #495057;
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5rem;
            font-weight: 700;
        }

        .section {
            margin-bottom: 20px;
        }

        .section-header {
            background-color: #17a2b8; /* Aqua Blue */
            color: #ffffff;
            padding: 15px;
            border-radius: 12px 12px 0 0;
            font-size: 1.6rem;
            font-weight: 700;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            border-radius: 12px;
            overflow: hidden;
        }

            .table th,
            .table td {
                padding: 1rem;
                vertical-align: middle;
                border-top: 1px solid #dee2e6;
                text-align: center;
            }

            .table thead {
                background-color: #007bff; /* Primary Blue */
                color: #ffffff;
            }

            .table tbody tr:nth-of-type(even) {
                background-color: #f8f9fa;
            }

            .table tbody tr:nth-of-type(odd) {
                background-color: #ffffff;
            }

            .table tbody tr:hover {
                background-color: #e2e6ea;
                cursor: pointer;
            }

            .table tbody tr td:nth-of-type(2) {
                color: #28a745; /* Durumu hücresinin rengi (Yeşil) */
                font-weight: bold;
            }

            .table tbody tr td:nth-of-type(3) {
                color: #6c757d; /* Çalışan hücresinin rengi (Gri) */
            }

            .table a {
                color: #007bff;
                text-decoration: none;
            }

                .table a:hover {
                    text-decoration: underline;
                }

            .table th {
                text-align: center;
                font-weight: 600;
            }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="section">
            <div class="section-header">İşler Listesi</div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">İş</th>
                        <th scope="col">Durumu</th>
                        <th scope="col">Çalışan</th>
                        <th scope="col">Oluşturulma Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row"><a href="/home/detail/@item.Id">@item.IsBaslik</a></th>
                            <td>@item.Status</td>
                            <td>@item.Name</td>
                            <td>@item.CreatedDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="footer">
            &copy; 2024 İş Takip Uygulaması
        </div>
    </div>
</body>
</html>
